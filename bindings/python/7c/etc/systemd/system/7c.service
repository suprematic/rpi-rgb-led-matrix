[Unit]
Description=SevenCourts scoreboard

Requires=local-fs.target
After=local-fs.target
DefaultDependencies=no

[Service]
Type=simple
Restart=on-failure

## Dirs
ProtectSystem=strict
ProtectHome=true
WorkingDirectory=/opt/7c

## Env
#Environment=BLOCKING_MAX_THREADS=16

ExecStart=/bin/sh rpi-rgb-led-matrix/bindings/python/7c/m0.sh

[Install]
WantedBy=basic.target